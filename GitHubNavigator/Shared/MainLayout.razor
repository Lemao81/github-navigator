@inherits LayoutComponentBase

<MudThemeProvider Theme="_theme" IsDarkMode="_isDarkMode"/>

<MudLayout>
    <MudAppBar>
        <MudIconButton Icon="@Icons.Material.Filled.Menu" Color="Color.Inherit" Size="Size.Large" Edge="Edge.Start" OnClick="@ToggleDrawer"/>
        GitHub Navigator
        <MudSpacer/>
        <MudToggleIconButton Toggled="_isDarkMode" Icon="@Icons.Material.Filled.DarkMode" ToggledIcon="@Icons.Material.Filled.WbSunny" Color="Color.Inherit" ToggledColor="Color.Warning"
                             Size="Size.Large" ToggledSize="Size.Large" Edge="Edge.End" ToggledChanged="@ToggleDarkMode"/>
    </MudAppBar>
    <MudDrawer Open="@_isDrawerOpen">
        <MudDrawerHeader>
            <MudImage Src="github.png" Width="200" Height="200"/>
        </MudDrawerHeader>
        <NavMenu/>
    </MudDrawer>
    <MudMainContent>
        <MudContainer MaxWidth="MaxWidth.Large" Class="pt-6">
            @Body
        </MudContainer>
    </MudMainContent>
</MudLayout>