@inherits LayoutComponentBase

<MudThemeProvider Theme="_theme"/>

<MudLayout>
    <MudAppBar>
        <MudIconButton Icon="@Icons.Material.Filled.Menu" Color="Color.Inherit" Size="Size.Large" Edge="Edge.Start" OnClick="@ToggleDrawer"></MudIconButton>
        GitHub Navigator
    </MudAppBar>
    <MudDrawer Open="@_isDrawerOpen">
        <MudDrawerHeader>
            <MudImage Src="github.png" Width="200" Height="200"/>
        </MudDrawerHeader>
        <NavMenu/>
    </MudDrawer>
    <MudMainContent>
        <MudContainer MaxWidth="MaxWidth.Large" Class="pt-6">
            @Body
        </MudContainer>
    </MudMainContent>
</MudLayout>